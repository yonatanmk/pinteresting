<h2><%= @question.title %></h2>
<% if flash[:notice] %>
  <p><%= flash.notice %></p>
<% end %>
<p><b>Description:</b><%= @question.description %></p>

<p><b>Answers:</b></p>
<ul>
  <% @answers.each do |answer| %>
    <li><%= answer.body %></li>
  <%end%>
</ul>

<p><b>New Answer:</b></p>

<%= render 'answers/form'%>

<%= form_for @question, url: {action: "destroy"} do |f| %>
  <%= f.submit "Delete Question" %>
<% end %>

<%= link_to 'Back', questions_path %>
