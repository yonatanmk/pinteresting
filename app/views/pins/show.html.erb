<div class="panel panel-default">
  <p id="notice"><%= notice %></p>
  <div class="panel-body">
    <p>
      <strong>Description:</strong>
      <%= @pin.description %>
    </p>
  </div>
  <div class="panel-footer">
    <% if @pin.user == current_user %>
      <%= link_to 'Edit', edit_pin_path(@pin) %> |
    <% end %>
    <%= link_to 'Back', pins_path %>
  </div>
</div>
